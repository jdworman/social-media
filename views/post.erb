
  <div class="container" id="new-message">
    <form action="/post" method="post">
      <h3>New Message</h3>
      <textarea id="post-title" name="title" placeholder="Title" required="required" maxlength="250"></textarea>
      <textarea id="post-content" name="content" placeholder="Content" required="required" ></textarea>
      <textarea id="post-image" name="image_url" placeholder="Image url (optional)"></textarea>
      <input type="submit">
    </form>
  </div>
